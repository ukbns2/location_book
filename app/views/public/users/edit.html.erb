<h1>Public::Users#edit</h1>
<p>Find me in app/views/public/users/edit.html.erb</p>

<div class ="container">
  <h1 class ="mt-3">ユーザー情報編集</h1>

  <div class ="row mt-4">
    <div class ="col-lg-8">
      <%= form_with model: @user, url: users_information_path(@user.id) do |f| %>

      <div class ="form-group">
        <%= f.label :name, "ユーザーネーム", class: "col-lg-3" %>
        <%= f.text_field :name %>
      </div>
      <div class ="form-group">
        <%= f.label :email, "メールアドレス", class: "col-lg-3" %>
        <%= f.text_field :email %>
      </div>

      <div class ="actions">
        <%= f.submit "編集内容を保存", class: "btn btn-success offset-lg-3" %>
        <%= link_to "退会する", users_detain_path, method: :get, class: "btn btn-danger offset-lg-3" %>
      </div>

      <% end %>
    </div>
  </div>

</div>