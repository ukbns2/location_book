
<div class ="container">
  <h1 class ="mt-3">マイページ</h1>
  <h4>登録情報　<%= link_to "編集する", users_information_edit_path, class: "btn btn-success" %></h4>

  <div class ="row">
    <div class ="col-lg-8">
      <table class ="table table-bordered">
        <tr>
          <td class ="table-active col-lg-4">ユーザーネーム</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td class ="table-active col-lg-4">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class ="mt-3">
    <h4>投稿(<%= @user.posts.count %>件)　　<%= link_to "一覧を見る", my_posts_path, class: "btn btn-primary" %></h4>
  </div>

  <div class ="mt-3">
    <h4>いいね(<%= @user.favorites.count %>件)　<%= link_to "一覧を見る", user_favorites_index_path, class: "btn btn-primary" %></h4>
  </div>
  <div class ="mt-3">
    <h4>コメント　<%#= link_to "一覧を見る", post_comments_path, class: "btn btn-primary" %></h4>
    <% @user.comments.each do |comment| %>
      <div>
        <%= link_to comment.post.title, detail_post_path(comment.post.id) %>
      </div>
    <% end %>
  </div>

</div>