<div class ="container">
  <h2 class ="mt-3">ログイン</h2>

  <div class ="mt-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-primary mt-3' %>
      </div>
    <% end %>
  </div>

  <div class ="mt-5">
    <h5>※会員登録がお済みでない方</h5>
    <p><%= link_to "こちら", "/users/sign_up" %>から新規登録をしてください。<p>
  </div>

</div>