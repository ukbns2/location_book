
<div class ="container">
 <h2 class ="mt-3">コメント一覧(<%= @user.comments.count %>件)</h2>
 <div class ="row">
  <div class ="col-12 mt-3">
   <table class ="table table-hover table-inverse table-bordered">
    <therd>
     <tr class ="table-warning">
      <th>場所名</th>
      <th>コメント内容</th>
     </tr>
    </therd>
    <tbody>
     <% @user.comments.each do |comment| %>
     <tr>
       <th><%= comment.post.title %></th>
       <th><%= link_to comment.comment, detail_post_path(comment.post.id) %></th>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>