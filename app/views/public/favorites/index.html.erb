
<div class ="container">
  <h2 class ="mt-3">いいね一覧(<%= @user.favorites.count %>件)</h2>
  <div class ="row">
    <div class ="col-12 mt-3">
      <table class ="table table-hover table-inverse table-bordered">
        <therd>
          <tr class ='table-warning'>
            <th>場所名</th>
            <th>住所</th>
            <th>タグ</th>
         </tr>
        </therd>
        <tbody>
          <% @user.favorites.each do |favorite| %>
          <tr>
             <th><%= link_to favorite.post.title, detail_post_path(favorite.post.id) %></th>
             <th><%= favorite.post.address %></th>
             <th>
              <% unless favorite.post.tags.nil? %>
               <% favorite.post.tags.each do |tag| %>
                <%= tag.name %>,
               <% end %>
              <% end %>
             </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>