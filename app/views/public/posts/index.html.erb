<h1>Public::Posts#index</h1>
<p>Find me in app/views/public/posts/index.html.erb</p>

<div class ="container">
 <h2 class ="mt-3">投稿一覧</h2>
 <div class ="row">
   <% @posts.each do |post| %>
   <div class ="col-lg-3">
　　写真
   </div>
   <div><%= post.title %></div>
   <div><%= post.address %></div>
   <div><%= post.tags.map(&:name).join(', ') %></div>
   <div>評価</div>
   <% end %>
 </div>

 <div class ="row justify-content-center mt-3">
   <%= paginate @posts %>
 </div>

</div>