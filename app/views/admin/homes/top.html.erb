<h1>Topページ</h1>


<div class ="container">
 <% if params[:tag_ids] %>
  <h2 class ="mt-3"><%= @tag.name %>のロケ地一覧　(全<%= @all_posts_count %>件)</h2>
 <% else %>
  <h2 class ="mt-3">ロケ地一覧　(全<%= @all_posts_count %>件)</h2>
 <% end %>

 <div class ="row">
  <div class ="col-lg-2 mt-4">
   <%= link_to "ロケ地一覧に戻る", admin_path %>
   <table class ="table table-bordered">
    <thead class ="table-success">
     <tr>
      <th>タグ一覧</th>
     </tr>
    </thead>
    <tbody>
     <% @tags.each do |tag| %>
     <tr>
      <th><%= link_to tag.name, admin_path(tag_ids: tag.id), class: 'tag_link' %></th>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>

  <div class ="col-lg-9 mr-2 mt-4">
   <% if @posts.first %>
    <table class ="table table-inverse">
     <thead>
      <tr class ="table-warning">
       <th>投稿日時</th>
       <th>画像</th>
       <th>場所名</th>
       <th>住所</th>
       <th>タグ</th>
      </tr>
     </thead>
     <tbody>
      <% @posts.each do |post| %>
      <tr>
       <td><%= l post.created_at, format: :short %></td>
       <td>
        <% if post.image.attached? %>
         <%= image_tag post.image, size: "50x50" %>
        <% else %>
         <%= image_tag 'no-image', size: "50x50" %>
        <% end %>
       </td>
       <td>
        <%= link_to admin_post_path(post.id) do %>
         <%= post.title %>
        <% end %>
       </td>
       <td><%= post.address.truncate(10) %></td>
       <td>
        <% post.tags.each do |tag| %>
         <%= tag.name %>,
        <% end %>
       </td>
      </tr>
      <% end %>
     </tbody>
    </table>
   <% else %>
    <h3 class ="mt-4">　　　該当するロケ地の投稿はありませんでした。</h3>
   <% end %>

  </div>
  <div class ="row justify-content-center">
   <p><%= paginate @posts %></p>
  </div>

 </div>
</div>




