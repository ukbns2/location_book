
<div class ="container">
  <h2 class ="mt-3">タグ一覧・追加</h2>

  <div class ="mt-3">
    <%= form_with model: @tag, url: admin_tags_path do |f| %>
    <div class ="field">
      <%= f.label :name, "タグ名　" %>
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class: "btn btn-success offset-lg-1" %>
    </div>
    <% end %>
  </div>

  <div class ="mt-5">
    <div class ="col-lg-8">
      <table class ="table table-inverse">
       <thead>
        <tr class ="table-warning">
         <th>タグ</th>
         <th>ステータス</th>
         <th colspan ="2"></th>
        </tr>
       </thead>
       <tbody>
        <% @tags.each do |tag| %>
        <tr>
         <td><%= tag.name %></td>
         <td>
          <% if tag.status %>
           <p class ="text-secondary">　非表示</p>
          <% else %>
           <p class ="text-primary">　表示</p>
          <% end %>
         </td>
         <td><%= link_to "編集する", edit_admin_tag_path(tag.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>