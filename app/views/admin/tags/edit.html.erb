
<div class ="container">
  <h2 class ="mt-3">タグ編集</h2>

  <div class ="mt-5">
    <%= form_with model: @tag, url: admin_tag_path(@tag.id), method: :patch do |f| %>
     <div class ="field">
       <%= f.label :name, "タグ名　" %>
       <%= f.text_field :name %>
       <%= f.submit '変更を保存', class: "btn btn-success offset-lg-1" %>
     </div>
    <% end %>
  </div>
</div>