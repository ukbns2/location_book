
<div class ="container">
  <h2 class ="mt-3">タグ編集</h2>

  <div class ="mt-5">
    <%= form_with model: @tag, url: admin_tag_path(@tag.id), method: :patch do |f| %>
     <div class ="field">
       <%= f.label :name, "タグ名", class: "col-lg-2" %>
       <%= f.text_field :name %>
     </div>
     <div class ="field mt-2">
       <%= f.label :ステータス, class: "col-lg-2" %>
       <%= f.radio_button :status, false %>
       <%= f.label :status, "表示　" %>
       <%= f.radio_button :status, true %>
       <%= f.label :status, "非表示" %>
     </div>

       <%= f.submit '変更を保存', class: "btn btn-success offset-lg-2 mt-2" %>
    <% end %>
  </div>
</div>