<div class ="container">
  <h2 class ="mt-3">管理者ログイン</h2>

  <div class ="mt-4">
    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :メールアドレス, class: "col-3 col-form-label offset-1 mt-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class: "col-3 col-form-label offset-1" %>
        <%= f.password_field :password, autocomplete: "current-password mt-1" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-primary offset-4 mt-3' %>
      </div>
    <% end %>
  </div>

  <%= render "admin/shared/links" %>
</div>
