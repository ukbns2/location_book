
<div class ="container">
  <h1 class ="mt-3">ユーザー一覧</h1>

  <div class ="col-lg-10 offset-lg-1">
    <table class ="table table-hover table-inverse">
      <therd>
        <tr class ="table-active">
          <th>会員ID</th>
          <th>ユーザーネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </therd>
      <tbody>
        <% @users.each do |user| %>
         <tr>
          <th><%= user.id %></th>
          <th>
            <%= link_to admin_user_path(user) do %>
             <%= user.name %>
            <% end %>
          </th>
          <th><%= user.email %></th>
          <th>
            <% if user.is_deleted %>
             <p class ="text-secondary">　退会</p>
            <% else %>
             <p class ="text-success">　有効</p>
            <% end %>
          </th>
         </tr>
        <% end %>
      </tbody>
    </table>

    <div class ="row justify-content-center">
      <%= paginate @users %>
    </div>

  </div>
</div>
