
<div class ="container">
  <h1 class ="mt-3"><%= @user.name %>さんの情報詳細</h1>

  <table class ="table table-borderless mt-3">
    <tr>
      <th class ="col-lg-2">ユーザーID</th>
      <th><%= @user.id %></th>
    </tr>
    <tr>
      <th class ="col-lg-2">ユーザーネーム</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th class ="col-lg-2">メールアドレス</th>
      <th><%= @user.email %></th>
    </tr>
    <tr>
      <th class ="col-lg-2">会員ステータス</th>
      <th>
        <% if @user.is_deleted %>
         <p class ="text-secondary">退会</p>
        <% else %>
         <p class ="text-success">有効</p>
        <% end %>
      </th>
    </tr>
    <tr>
      <th></th>
      <th><%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %></th>
    </tr>
  </table>
</div>