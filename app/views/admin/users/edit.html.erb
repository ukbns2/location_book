
<div class ="container">
  <h1 class ="mt-3"><%= @user.name %>さんの情報編集</h1>

  <div class ="mt-4">
    <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
    <div class ="field">
      <%= f.label :ユーザーID, 'ユーザーID', class: "col-lg-3" %>
      <%= @user.id %>
    </div>
    <div class ="field mt-2">
      <%= f.label :ユーザーネーム, class: "col-lg-3" %>
      <%= f.text_field :name %>
    </div>
    <div class ="field mt-2">
      <%= f.label :メールアドレス, class: "col-lg-3" %>
      <%= f.text_field :email %>
    </div>
    <div class ="field mt-2">
      <%= f.label :ユーザーステータス, class: "col-lg-3" %>
      <%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted, "有効　" %>
      <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted, "退会" %>
    </div>


     <%= f.submit "変更を保存", class: 'btn btn-success offset-lg-3 mt-2' %>

    <% end %>
  </div>


</div>